<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"

    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            >

            <ImageView
                android:id="@+id/avator"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/noavatar_middle"
                android:layout_alignBottom="@+id/user"
                android:layout_alignTop="@+id/user"
                />

            <RelativeLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/avator"
                android:layout_marginLeft="12dp"
                >
                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sunyton"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5小时前"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    />



            </RelativeLayout>


            <WebView
                android:id="@+id/wv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avator"
                android:layout_marginTop="12dp"
                android:textSize="16dp"
                />




        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
