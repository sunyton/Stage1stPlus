<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f5f5f5"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名哟"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_keyboard_arrow_right_grey_500_18dp"

                    />

                <TextView
                    android:id="@+id/topicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="android"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ‧ "
                    />
                <TextView
                    android:id="@+id/replyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22d"
                    android:textSize="11sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                    <ImageButton
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_more_vert_grey_400_18dp"
                        android:clickable="true"
                        />



                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/topicBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是一个帖子，你可以看到帖子的标222222222de 题？？？？？？？"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_remove_red_eye_grey_500_18dp"
                        />
                    <TextView
                        android:id="@+id/readNum"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="122"
                        android:textSize="12sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_mode_comment_grey_500_18dp"
                        />
                    <TextView
                        android:id="@+id/commentNum"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="122"
                        android:textSize="12sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_share_grey_500_18dp"
                        />
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="share"
                        android:textSize="12sp"
                        />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>